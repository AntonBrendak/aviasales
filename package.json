{
  "name": "air-platform",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=20.11"
  },
  "scripts": {
    "prepare": "husky install",
    "dev:all": "turbo run dev --parallel",
    "build:all": "turbo run build",
    "lint:all": "turbo run lint",
    "typecheck:all": "turbo run typecheck",
    "test:all": "turbo run test",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs,.mjs",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "// ----- DB & Contracts -----": "",
    "db:migrate": "prisma migrate dev --schema=packages/contracts/prisma/schema.prisma",
    "db:generate": "prisma generate --schema=packages/contracts/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=packages/contracts/prisma/schema.prisma",
    "db:setup": "pnpm db:migrate && pnpm db:generate",
    "openapi:gen": "node scripts/openapi.gen.mjs",
    "openapi:gen:bff": "openapi-typescript packages/contracts/openapi/bff.v1.yaml -o packages/contracts/types/bff.ts",
    "infra:up": "docker compose -f infra/docker-compose.dev.yml up -d",
    "infra:down": "docker compose -f infra/docker-compose.dev.yml down -v",
    "infra:temporal:health": "docker compose -f infra/docker-compose.dev.yml exec temporal bash -lc 'tctl --address temporal:7233 cluster health'",
    "// ----- Tests -----": "",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "// ----- CI convenience -----": "",
    "ci:check": "pnpm lint && pnpm typecheck && pnpm test && pnpm openapi:gen",
    "openapi\\:gen\\:bff": "mkdir -p packages/contracts/types && openapi-typescript packages/contracts/openapi/bff.v1.yaml -o packages/contracts/types/bff.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.4.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/http-errors": "^2.0.5",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.17.2",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^9.9.0",
    "fast-check": "^3.19.0",
    "husky": "^9.1.5",
    "openapi-typescript": "^7.9.1",
    "prettier": "^3.3.3",
    "prisma": "^5.18.0",
    "tsx": "^4.16.2",
    "turbo": "^2.5.6",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5",
    "yaml": "^2.5.1"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "@temporalio/client": "1.12.3",
    "@temporalio/worker": "1.12.3",
    "@temporalio/workflow": "1.12.3",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "ioredis": "^5.4.1",
    "morgan": "^1.10.0",
    "ulid": "^2.3.0",
    "zod": "^3.23.8"
  },
  "type": "module"
}
